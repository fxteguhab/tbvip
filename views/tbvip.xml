<openerp>
	<data>

		<template id="assets_frontend" inherit_id="website.assets_frontend" name="tbvip">
			<xpath expr="." position="inside">
				<link rel='stylesheet' href='/tbvip/static/src/css/tbvip.css'/>
				<link rel='stylesheet' href='/tbvip/static/src/css/website_list.css'/>
				<script type="text/javascript" src="/tbvip/static/src/js/website_tbvip.js"></script>
			</xpath>
		</template>
		
		<template id="website_tbvip_list_with_filter" name="List with Filter">
			<t t-call="website.layout">
				<div t-att-id="container_id">
					<div class="container"> 
						<div id="message_container"></div>
						<h1><t t-esc="page_title" /></h1>
						<div id="filter_container" />
					</div>
					<div id="list_container"></div>
				</div>
			</t>
		</template>
		
		
		<!-- PURCHASE -->
		
		<record model="ir.ui.view" id="tbvip_purchase_needs_form">
			<field name="name">tbvip.purchase.needs.form</field>
			<field name="model">tbvip.purchase.needs</field>
			<field name="arch" type="xml">
				<form string="needs" version="7.0">
					<group col="2">
						<group>
							<field name="supplier_id"/>
							<field name="target_date"/>
							<field name="need_line_ids"/>
							<field name="state"/>
							<field name="fullfilment_rate"/>
						</group>
					</group>
				</form>
			</field>
		</record>
		
		<record model="ir.ui.view" id="tbvip_purchase_needs_tree">
			<field name="name">tbvip.purchase.needs.tree</field>
			<field name="model">tbvip.purchase.needs</field>
			<field name="arch" type="xml">
				<tree string="needs" version="7.0">
					<field name="supplier_id"/>
					<field name="target_date"/>
					<field name="need_line_ids"/>
					<field name="state"/>
					<field name="fullfilment_rate"/>
				</tree>
			</field>
		</record>
		
	</data>
</openerp>