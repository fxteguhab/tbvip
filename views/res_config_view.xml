<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="view_purchase_configuration_inherit">
			<field name="name">purchase settings.inherit</field>
			<field name="model">purchase.config.settings</field>
			<field name="inherit_id" ref="purchase.view_purchase_configuration"/>
			<field name="arch" type="xml">
				<xpath expr="//label[@string='Purchase Order']/following-sibling::div" position="inside">
					<div>
						<field name="default_discount_algorithm" class="oe_inline"/>
						<label for="default_discount_algorithm"/>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</openerp>
