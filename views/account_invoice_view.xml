<openerp>
	<data>
		<record model="ir.ui.view" id="invoice_form_inherit">
			<field name="name">account.invoice.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<field name="discount" position="replace">
					<field name="discount" invisible="1"/>
				</field>
				<field name="invoice_line_tax_id" position="before">
					<field name="discount_amount" modifiers="{'readonly':[('state', '!=', 'draft')]}"/>
				</field>
				<field name="amount_tax" position="after">
					<field name="discount_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
						   attrs="{'readonly':[('state', '!=', 'draft')]}"/>
				</field>
			</field>
		</record>
	</data>
</openerp>
