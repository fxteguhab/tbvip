<openerp>
	<data>
		<record model="ir.ui.view" id="purchase_needs_order_form_inherit_inherit">
			<field name="name">purchase.needs.order.form.inherit.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase_sale_discount.purchase_order_form_inherit"/>
			<field name="arch" type="xml">
				<field name="product_qty" position="attributes">
					<attribute name="on_change">onchange_order_line(product_qty, price_unit, discount_string, order_id)</attribute>
				</field>
				<field name="price_unit" position="attributes">
					<attribute name="on_change">onchange_order_line(product_qty, price_unit, discount_string, order_id)</attribute>
				</field>
				<field name="discount_string" position="attributes">
					<attribute name="on_change">onchange_order_line(product_qty, price_unit, discount_string, order_id)</attribute>
				</field>
			</field>
		</record>


		<record model="ir.ui.view" id="purchase_needs_form_inherit">
			<field name="name">purchase.needs.form.inherit</field>
			<field name="model">purchase.needs</field>
			<field name="inherit_id" ref="purchase_needs.purchase_needs_form"/>
			<field name="arch" type="xml">
				<field name="selection_rate" position="after">
					<field name="branch_id"/>
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="purchase_needs_form_create_inherit">
			<field name="name">purchase.needs.form.create.inherit</field>
			<field name="model">purchase.needs</field>
			<field name="inherit_id" ref="purchase_needs.purchase_needs_form_create"/>
			<field name="arch" type="xml">
				<field name="selection_rate" position="after">
					<field name="branch_id"/>
				</field>
			</field>
		</record>
	</data>
</openerp>
