<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
	
	<t t-name="website_tbvip_kontra_bon_filter">
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<label for="state">State</label>
					<select id="state" class="form-control">
						<option value="all">[All status]</option>
						<option value="draft">Draft</option>
						<option value="giro">Giro filled, unpaid</option>
						<option value="posted">Paid</option>
					</select>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label for="time_range">Time Range</label>
					<select id="time_range" class="form-control">
						<option value="all">[All time - Slow!]</option>
						<option value="this_month">This month</option>
						<option value="last_month">Last month</option>
						<option value="last_3month">Last three months</option>
					</select>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label for="supplier">Supplier</label>
					<select id="supplier" class="form-control">
						<option value="all">[All Supplier]</option>
                        <t t-foreach="suppliers" t-as="supplier">
                            <option t-attf-value="{{supplier.id}}"><t t-esc="supplier.name"/></option>
                        </t>
					</select>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-1 form-group">
				<button type="button" id="btn_filter" class="btn btn-success btn-block">Filter</button>
			</div>
		</div>
	</t>
	
	<t t-name="website_tbvip_kontra_bon_list">
		<div class="website_list_container">
			<t t-foreach="kontra" t-as="single_kontra">
				<div class="row row_hoverable single_kontra accordion" attr-data-kontra_id="single_kontra.kontra_id">
					<div id="id" style="display: none;">
						<t t-esc="single_kontra['id']"/>
					</div>
					<div class="col-md-6">
						<t t-esc="single_kontra['date']"/> - <b><t t-esc="single_kontra['partner_id']"/></b>
					</div>
					<div class="col-md-6 accordion_header_toggle text-right">
						<t t-esc="single_kontra['line_dr_ids_length']"/> Bon - <span class="rupiah"><b><t t-esc="single_kontra['amount']"/></b></span>
					</div>
				</div>
				<div class="detail_container accordion_detail">
					<h4>Payment</h4>
					<table>
						<tr>
							<td><label for="reference">Reference</label></td>
							<td><input type="text" id="reference" t-attf-value="{{single_kontra['reference']}}"/></td>
							<td><label for="journal_id">Journal</label></td>
							<td>
								<select id="journal_id" class="form-control">
									<t t-foreach="journals" t-as="journal">
										<option t-attf-value="{{journal.id}}"><t t-esc="journal.name"/></option>
									</t>
								</select>
							</td>
						</tr>
						<tr>
							<td><label for="amount">Amount</label></td>
							<td><input type="number" id="amount" t-attf-value="{{single_kontra['amount']}}"/></td>
							<td><label for="check_maturity_date">Check Maturity Date</label></td>
							<td><input type="date" id="check_maturity_date" t-attf-value="{{single_kontra['check_maturity_date']}}"/></td>
						</tr>
					</table>
					<button type="button" id="btn_save" class="btn btn-success">Save</button>
					<button type="button" id="btn_cancel" class="btn btn-danger">Cancel</button>
					<hr/>
					<t t-foreach="single_kontra['line_dr_ids']" t-as="kontra_line">
						<div class="row">
							<div class="row">
								<div class="col-xs-6">
									<div style="height: 50%;">
										<b><t t-esc="kontra_line['move_line_id']"/></b>
									</div>
									<div style="height: 50%;">
									Due: <t t-esc="kontra_line['date_due']"/>
									</div>
								</div>
								<div class="col-xs-6 text-right line_voucher_price rupiah">
									<t t-esc="kontra_line['amount']"/>
								</div>
							</div>
						</div>
						<hr style="margin-top: 5px; margin-bottom: 0px"/>
					</t>
				</div>
			</t>
		</div>
	</t>
</templates>