<openerp>
	<data>
		<template id="sale_receipt">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<div class="page">
						<style>
						.sale_receipt {
							text-align: left;
							width: 300px;
							margin: 0px;
							padding: 0px;
							background-color: white;
							font-size: 14px;
							display: inline-block;
							font-family: "Inconsolata";
							overflow: hidden;
						}
						.sale_receipt .center-align {
							text-align: center;
						}
						.sale_receipt pre{
							font-family: "Inconsolata";
						}
						.sale_receipt .emph{
							font-size: 20px;
							margin:5px;
						}
						.sale_receipt table {
							width: 100%;
							border: 0;
							table-layout: fixed;
						}
						.sale_receipt table td {
							border: 0;
							word-wrap: break-word;
						</style>

						<div class="sale_receipt">
							<div class="center-align">
							<t t-esc="new Date().toString(Date.CultureInfo.formatPatterns.shortDate + ' ' +
								Date.CultureInfo.formatPatterns.longTime)"/>
							</div>
							<br/>
							<t t-esc="o.name"/><br/>
							<t t-esc="o.user_id.company_id.name"/><br/>
							Phone: <t t-esc="o.user_id.company_id.phone"/><br/>
							User: <t t-esc="o.user_id.name"/><br/>
							Branch: <t t-esc="o.user_id.branch_id.name"/><br/>
							Date: <span t-field="o.date_order"/><br/>
							<br/>
							<br/>

							<table>
								<colgroup>
									<col width='50%'/>
									<col width='25%'/>
									<col width='25%'/>
								</colgroup>
								<tr t-foreach="o.order_line" t-as="line">
									<td>
										<span t-field="line.product_id"/>
									</td>
									<td class="text-right">
										<span t-field="line.product_uom_qty"/>
									</td>
									<td class="text-right">
										<span t-field="line.price_subtotal"/>
									</td>
								</tr>
							</table>

							<br/>
							<table>
								<colgroup>
									<col width='30%'/>
									<col width='70%'/>
								</colgroup>
								<tr class="emph">
									<td>
										<span>Total</span>
									</td>
									<td class="text-right">
										<span t-field="o.amount_total"/>
									</td>
								</tr>
							</table>
						</div>
					</div>
				</t>
			</t>
		</template>

	</data>
</openerp>
